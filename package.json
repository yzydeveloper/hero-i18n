{
	"publisher": "yzydeveloper",
	"name": "hero-i18n",
	"displayName": "hero-i18n",
	"description": "hero-i18n",
	"version": "0.0.0",
	"license": "MIT",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsup src/extension.ts --dts --external=vscode",
		"dev": "npm run build -- --watch"
	},
	"keywords": [
		"i18n"
	],
	"devDependencies": {
		"@antfu/eslint-config": "^0.6.2",
		"@types/node": "^14.14.37",
		"@types/vscode": "^1.52.0",
		"axios": "^0.23.0",
		"eslint": "^7.23.0",
		"fast-glob": "^3.2.7",
		"pkg-up": "^3.1.0",
		"puid": "^1.0.7",
		"tsup": "^4.8.21",
		"types-package-json": "^2.0.31",
		"typescript": "^4.2.3"
	},
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "hero-i18n",
					"title": "拯救国际化",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"hero-i18n": [
				{
					"id": "hero-i18n",
					"name": "拯救国际化"
				}
			]
		},
		"commands": [
			{
				"command": "hero-i18n.config-locales",
				"title": "手动设置语言目录"
			},
			{
				"command": "hero-i18n.config-locales-auto",
				"title": "自动设置语言目录"
			},
			{
				"command": "hero-i18n.extract",
				"title": "Extract To File"
			},
			{
				"command": "hero-i18n.transform",
				"title": "Transform I18n"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus && resourceLangId =~ /^javascript$|^vue$/",
					"command": "hero-i18n.extract",
					"group": "1_modification@4"
				},
				{
					"when": "editorFocus && resourceLangId =~ /^javascript$|^vue$/",
					"command": "hero-i18n.transform",
					"group": "1_modification@5"
				}
			],
			"explorer/context": [
				{
					"command": "hero-i18n.extract",
					"when": "resourceLangId =~ /^vue$|^javascript$/",
					"group": "1_modification@4"
				},
				{
					"command": "hero-i18n.transform",
					"when": "resourceLangId =~ /^vue$|^javascript$/",
					"group": "1_modification@5"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "hero-i18n",
			"properties": {
				"hero-i18n.localesPath": {
					"type": "string",
					"description": "翻译文件的目录（相对于项目根目录）"
				},
				"hero-i18n.langFile": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"zh-CN",
						"en-US"
					],
					"description": "指定国际化JSON文件名称,且支持的国际化"
				},
				"hero-i18n.puidType": {
					"type": "string",
					"default": "short",
					"description": "国际化key的唯一类型"
				},
				"hero-i18n.translate.libre.apiRoot": {
					"type": "string",
					"default": "http://localhost:5000",
					"description": ""
				},
				"hero-i18n.translate.engines": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"google",
							"google-cn",
							"libretranslate"
						],
						"default": [
							"google-cn"
						],
						"description": "翻译服务提供商"
					}
				},
				"hero-i18n.sourceLanguage": {
					"type": "string",
					"default": "zh-CN",
					"description": "翻译源语言"
				},
				"hero-i18n.namespace": {
					"type": "boolean",
					"default": false,
					"description": "启用命名空间"
				},
				"hero-i18n.ignoreFiles": {
					"type": "array",
					"item": {
						"type": "string"
					},
					"description": "加载时要忽略的区域设置文件。\n接受一个glob数组"
				}
			}
		}
	}
}
