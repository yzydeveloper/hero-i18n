{
	"publisher": "yzydeveloper",
	"name": "hero-i18n",
	"displayName": "Hero i18n",
	"description": "This is a hero",
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:vue",
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run build",
		"dev": "tsup src/extension.ts --dts --watch --external=vscode",
		"build": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"workbench:dev": "vite build --watch --config ./src/editor/vite.config.ts",
		"workbench:build": "vite --watch --config ./src/editor/vite.config.ts"
	},
	"keywords": [
		"i18n"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/yzydeveloper/hero-i18n"
	},
	"homepage": "https://github.com/yzydeveloper/hero-i18n",
	"dependencies": {
		"@babel/core": "^7.15.8",
		"@babel/generator": "^7.15.8",
		"@babel/parser": "^7.15.8",
		"@babel/template": "^7.15.4",
		"@babel/traverse": "^7.15.4",
		"@babel/types": "^7.15.6",
		"@vue/compiler-core": "^3.2.20",
		"axios": "^0.23.0",
		"fast-glob": "^3.2.7",
		"flat": "^5.0.2",
		"vue": "3.2.26"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^0.6.2",
		"@types/babel__generator": "^7.6.3",
		"@types/babel__traverse": "^7.14.2",
		"@types/flat": "^5.0.2",
		"@types/node": "^14.14.37",
		"@types/vscode": "^1.52.0",
		"@vitejs/plugin-vue": "^2.0.1",
		"eslint": "^7.23.0",
		"ts-loader": "^9.2.6",
		"tsup": "^4.8.21",
		"typescript": "^4.2.3",
		"vite": "^2.7.2",
		"webpack": "^5.64.2",
		"webpack-cli": "^4.9.1"
	},
	"contributes": {
		"commands": [
			{
				"command": "hero-i18n.config-locales",
				"title": "手动设置语言目录"
			},
			{
				"command": "hero-i18n.config-locales-auto",
				"title": "自动设置语言目录"
			},
			{
				"command": "hero-i18n.extract",
				"title": "打开翻译工作台"
			}
		],
		"configuration": {
			"type": "object",
			"title": "hero-i18n",
			"properties": {
				"hero-i18n.localesPath": {
					"type": "string",
					"description": "翻译文件的目录（相对于项目根目录）"
				},
				"hero-i18n.translate-apiRoot": {
					"type": "string",
					"default": "http://localhost:5000",
					"description": ""
				},
				"hero-i18n.translate-engines": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"google",
							"google-cn",
							"libretranslate"
						],
						"default": [
							"google-cn"
						]
					},
					"description": "翻译服务提供商"
				},
				"hero-i18n.sourceLanguage": {
					"type": "string",
					"default": "zh-CN",
					"description": "翻译源语言"
				},
				"hero-i18n.namespace": {
					"type": "boolean",
					"default": false,
					"description": "启用命名空间"
				},
				"hero-i18n.ignoreFiles": {
					"type": "array",
					"item": {
						"type": "string"
					},
					"description": "加载时要忽略的区域设置文件。\n接受一个glob数组"
				}
			}
		}
	}
}
